@{
}

@model tttest.Models.Empolyee

<button class="btn-secondary"><a asp-action="Create">สร้าง</a></button>
<br />
<table class="container">
    <thead>
        <tr>
            <th>ชื่อ</th>
            <th>ที่อยู่</th>
            <th>ตำแหน่ง</th>
            <th>สถานะ</th>
            <th>วันเดือนปีเกิด</th>
            
        </tr>
    </thead>
    @foreach (var item in ViewBag.e)
    {
        <tbody>
            <tr>
                <td>
                    @item.Employname
                </td>
                <td>@item.EmployAdress</td>
                <td>
                    @item.department
                </td>
               <td>@Html.DisplayFor(item => item.status)</td>
                <td>@item.dateofb</td>
                <td><button class="btn-warning"><a asp-action="Edit" asp-route-id="@item.id">แก้ไข</a></button></td>
                <td><button class="btn-danger"><a asp-action="Delete" asp-route-id="@item.id">ลบ</a></button></td>
            </tr>
        </tbody>
    }

</table>